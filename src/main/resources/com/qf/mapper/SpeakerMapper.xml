    <select id="selectById" parameterType="String" resultMap="speakerMap">
        SELECT
        speaker.id AS id,
        speaker.speaker_name,
        speaker.speaker_desc,
        speaker.speaker_job,
        speaker.head_img_url
        FROM
        speaker
        where
        speaker.id = #{id}
    </select>
    <insert id="insertSpeaker" parameterType="com.qf.pojo.Speaker">
        INSERT INTO `speaker`(
        `speaker_name`,
        `speaker_desc`,
        `speaker_job`,
        `head_img_url`)
        VALUES
        (#{speakerName},
        #{speakerDesc},
        #{speakerJob},
        #{headImgUrl});
    </insert>
    <update id="updateSpeaker" parameterType="com.qf.pojo.Speaker">
        UPDATE
        `speaker`
        SET
        `speaker_name` = #{speakerName},
        `speaker_desc` = #{speakerDesc},
        `speaker_job` = #{speakerJob}
        WHERE
        `id` = #{id};
    </update>
    <delete id="delById" parameterType="String">
        delete from speaker where id = #{id}
    </delete>

